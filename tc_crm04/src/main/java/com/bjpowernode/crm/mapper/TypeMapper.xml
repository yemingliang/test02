<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bjpowernode.crm.mapper.TypeMapper">
    <!--
    List getAll
    Type get
    int save
    int delete
    int update
    boolean getExists
    -->
    <select id="getAll" resultType="Type">
        select * from tbl_dictionary_type
    </select>
    <select id="get" resultType="Type">
        select * from tbl_dictionary_type where id=#{id}
    </select>
    <!--
        true    false
        1       0
        yes     no
        on      off
    -->
    <select id="getExists" resultType="boolean">
        select count(*) from tbl_dictionary_type where id=#{id}
    </select>
    <insert id="save">
        insert into tbl_dictionary_type values(
            #{id},
            #{name},
            #{description}
        )
    </insert>
    <delete id="delete">
        delete from tbl_dictionary_type where id in
        <foreach collection="array" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    <update id="update">
        update tbl_dictionary_type set
          name=#{name},
          description=#{description}
        where id=#{id}
    </update>
</mapper>